<?xml version="1.0" encoding="UTF-8"?>
<project name="ant-build-commons-extensions-php" basedir=".">

    <description>
        General extension for PHP related project. This extension provides targets
        to check if the current project is a PHP project.
    </description>

    <!--
        Tests if the current project is a php project and sets the property
        <b>php:is-php-project</b>.
    -->
    <target name="php:is-php-project">
        <condition property="php:is-php-project">
            <or>
                <available file="${commons.srcdir.php}" />
                <available file="${commons.testdir.php}" />
            </or>
        </condition>
    </target>
</project>
