<?xml version="1.0" encoding="UTF-8" ?>
<project name="abc">

    <dirname property="abc.base.directory"
             file="${ant.file.abc}" />

    <property name="abc.extensions.directory"
              location="${abc.base.directory}/Extensions" />

    <property file="${abc.base.directory}/abc.properties" />

    <!--
        Include all Configure time dependencies. Explicitly leaving out the lifecycle targets
     -->
    <import file="${abc.extensions.directory}/ABC/Core/Ant-Contrib/Extension.xml" />
    <import file="${abc.extensions.directory}/ABC/Core/SDK/Extension.xml" />
    <import file="${abc.extensions.directory}/ABC/Core/Execution/Extension.xml" />
    <import file="${abc.extensions.directory}/ABC/Core/String/Extension.xml" />
    <import file="${abc.extensions.directory}/ABC/Core/Configure/Extension.xml" />
    <import file="${abc.extensions.directory}/ABC/Core/Configure/Extension-Points.xml" />
    <import file="${abc.extensions.directory}/ABC/Core/Lifecycle/Extension-Points.xml" />
</project>
