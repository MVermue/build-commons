<?xml version="1.0" encoding="UTF-8" ?>
<project name="abc">

    <dirname property="abc.base.directory"
             file="${ant.file.abc}" />

    <property name="abc.extensions.directory"
              location="${abc.base.directory}/Extensions" />

    <!--
    ############################################################################
      This property should normally be set by the generated build.xml file.
      But we need to kick of the initial configuration and generation of
      this build.xml file, which is executed from within the build directory.
    ############################################################################
    -->
    <property name="project.build.directory" location="${user.dir}" />

    <property file="${abc.base.directory}/abc.properties" />

    <!--
        Include all Configure time dependencies. Explicitly leaving out the lifecycle targets
     -->
    <import file="${abc.extensions.directory}/ABC/SDK/Ant-Contrib/Extension.xml" />
    <import file="${abc.extensions.directory}/ABC/SDK/Core/Extension.xml" />
    <import file="${abc.extensions.directory}/ABC/SDK/Core/Configure.xml" />
    <import file="${abc.extensions.directory}/ABC/SDK/Execution/Extension.xml" />
    <import file="${abc.extensions.directory}/ABC/SDK/String/Extension.xml" />
    <import file="${abc.extensions.directory}/ABC/SDK/Configure/Extension.xml" />
    <import file="${abc.extensions.directory}/ABC/SDK/Configure/Extension-Points.xml" />
    <import file="${abc.extensions.directory}/ABC/SDK/Lifecycle/Extension-Points.xml" />
</project>
