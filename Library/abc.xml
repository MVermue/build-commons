<?xml version="1.0" encoding="UTF-8" ?>
<project name="abc">

    <dirname property="abc.base.directory"
             file="${ant.file.abc}" />

    <property name="abc.extensions.directory"
              location="${abc.base.directory}/Extensions" />

    <property file="${abc.base.directory}/abc.properties" />

    <!--
        Include all Configure time dependencies. Explicitly leaving out the lifecycle targets
     -->
    <import>
        <fileset dir="${abc.extensions.directory}/ABC/Core">
            <include name="**/Extension.xml" />
            <include name="**/Extension-Points.xml" />
            <exclude name="Lifecycle/Extension.xml" />
            <exclude name="Changes/Extension.xml" />
        </fileset>
    </import>
</project>
