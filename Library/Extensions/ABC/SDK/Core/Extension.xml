<?xml version="1.0" encoding="UTF-8"?>
<project name="ABC:SDK:Core:Extension"
         xmlns:ac="http://ant-contrib.sourceforge.net"
         xmlns:abc="http://abc.tools.qafoo.com/abc.xsd"
         xmlns:internal="http://abc.tools.qafoo.com/abc-internal.xsd">

    <!--
        Entry point, which any extension has to call first

        This macro defines certain extension based variables, like its directory,
        its resource directory and so on. Furthermore the extension default
        properties will be loaded, if available.

        Using this macro instead of doing everything by oneself ensures all
        necessary steps are executed in the correct order.
    -->
    <abc:macrodef name="extension-init">
        <attribute name="name" />
        <attribute name="has-resources" default="" />

        <sequential>
            <internal:ABC-SDK-Core-Public-Property-Name-From-Extension
                    extension="@@{name}"
                    property="@@{name}#Public.Property.Prefix" />
            <ac:if>
                <istrue value="@{has-resources}" />
                <ac:then>
                    <internal:ABC-SDK-Core-Resources-Directory
                            extension="@@{name}"
                            property="${@@{name}#Public.Property.Prefix}.resources.directory" />
                </ac:then>
            </ac:if>

            <internal:ABC-SDK-Core-Extension-Directory
                    extension="@@{name}"
                    property="${@@{name}#Public.Property.Prefix}.directory" />


            <ac:propertycopy from="${@@{name}#Public.Property.Prefix}.directory"
                             property="@@{name}#Directory" />

            <property file="${@@{name}#Directory}/Extension.properties" />
            <property file="${@@{name}#Directory}/Common.properties" />
        </sequential>
    </abc:macrodef>


    <!--
        Target, which each Extension needs to depend on.

        This Target is used for bootstrapping. As it will be called before any other extension.
        It may initialize build directories or do other *runtime* configuration
    -->
    <target name="-ABC:SDK:Core:Extension">
        <internal:ABC-SDK-Core-Extension-Bootstrap-Common />
        <ac:if>
            <istrue value="${abc.runtime.mode}" />
            <ac:then>
                <internal:ABC-SDK-Core-Extension-Bootstrap-Runtime />
            </ac:then>
            <ac:else>
                <internal:ABC-SDK-Core-Extension-Bootstrap-Configure />
            </ac:else>
        </ac:if>
    </target>

    <!--
        Initialization which is done during both phases
    -->
    <internal:macrodef name="ABC-SDK-Core-Extension-Bootstrap-Common">
        <sequential>
            <echo message="Common Bootstrap" />
        </sequential>
    </internal:macrodef>

    <!--
        Initialization which is done only during runtime
    -->
    <internal:macrodef name="ABC-SDK-Core-Extension-Bootstrap-Runtime">
        <sequential>
            <echo message="Runtime Bootstrap" />
        </sequential>
    </internal:macrodef>

    <!--
        Initialization which is done only during configure
    -->
    <internal:macrodef name="ABC-SDK-Core-Extension-Bootstrap-Configure">
        <sequential>
            <echo message="Configure Bootstrap" />
        </sequential>
    </internal:macrodef>

</project>
