<?xml version="1.0" encoding="UTF-8" ?>
<project name="ABC:Core:Lifecycle">
    <target name="validate"
            depends="-validate:before~hook,
                     -validate:main~hook,
                     -validate:after~hook" />

    <target name="initialize"
            depends="validate,
                     -initialize:before~hook,
                     -initialize:main~hook,
                     -initialize:after~hook" />

    <target name="compile"
            depends="initialize,
                     -compile:before~hook,
                     -compile:main~hook,
                     -compile:after~hook" />

    <target name="link"
            depends="compile,
                     -link:before~hook,
                     -link:main~hook,
                     -link:after~hook" />

    <target name="test"
            depends="link,
                     -test:before~hook,
                     -test:main~hook,
                     -test:after~hook" />

    <target name="package"
            depends="test,
                     -package:before~hook,
                     -package:main~hook,
                     -package:after~hook" />

    <target name="integration-test"
            depends="package,
                     -integration-test:before~hook,
                     -integration-test:main~hook,
                     -integration-test:after~hook" />

    <target name="verify"
            depends="integration-test,
                     -verify:before~hook,
                     -verify:main~hook,
                     -verify:after~hook" />

    <target name="deploy"
            depends="verify,
                     -deploy:before~hook,
                     -deploy:main~hook,
                     -deploy:after~hook" />

    <target name="clean"
            depends="-clean:before~hook,
                     -clean:main~hook,
                     -clean:after~hook" />

</project>
