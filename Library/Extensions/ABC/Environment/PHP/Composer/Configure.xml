<?xml version="1.0" encoding="UTF-8" ?>
<project name="ABC:Environment:PHP:Composer:Configure"
         xmlns:abc="http://abc.tools.qafoo.com/abc.xsd"
         xmlns:internal="http://abc.tools.qafoo.com/abc-internal.xsd">

    <abc:configure-init name="ABC:Environment:PHP:Composer:Configure" />

    <target name="-ABC:Environment:PHP:Composer:Configure"
            depends="-ABC:Environment:PHP:Php:Configure">

        <mkdir taskname="ABC:Environment:PHP:Composer:Configure"
               dir="${abc.environment.php.composer.application.directory}" />

        <get taskname="ABC:Environment:PHP:Composer:Configure"
             src="${abc.environment.php.composer.download.url}"
             dest="${abc.environment.php.composer.application.file}"
             skipexisting="false" />

        <chmod file="${abc.environment.php.composer.application.file}"
               perm="ug+x"/>
    </target>
</project>
