<?xml version="1.0" encoding="UTF-8" ?>
<project name="ABC:Environment:PHP:PHPUnit:Configure"
         xmlns:abc="http://abc.tools.qafoo.com/abc.xsd"
         xmlns:internal="http://abc.tools.qafoo.com/abc-internal.xsd">

    <abc:configure-init name="ABC:Environment:PHP:PHPUnit:Configure" />

    <target name="-ABC:Environment:PHP:PHPUnit:Configure"
            depends="-ABC:Environment:PHP:Composer:Configure">

        <mkdir dir="${abc.environment.php.phpunit.application.directory}" />

        <abc:environment-composer-single-install
            dir="${abc.environment.php.phpunit.application.directory}"
            package="phpunit/phpunit"
            version="3.7.x" />
    </target>

</project>
