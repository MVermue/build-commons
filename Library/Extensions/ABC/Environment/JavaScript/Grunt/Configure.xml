<?xml version="1.0" encoding="UTF-8" ?>
<!--
    ABC:Environment:JavaScript:Grunt Configure Configuration

    This extension needs certain configure time dependencies
-->
<project name="ABC:Environment:JavaScript:Grunt:Configure"
         xmlns:ac="http://ant-contrib.sourceforge.net"
         xmlns:abc="http://abc.tools.qafoo.com/abc.xsd"
         xmlns:internal="http://abc.tools.qafoo.com/abc-internal.xsd">

    <abc:configure-init name="ABC:Environment:JavaScript:Grunt:Configure"
                        has-resources="false" />

    <target name="-ABC:Environment:JavaScript:Grunt:Configure"
            depends="-ABC:Environment:JavaScript:Npm:Configure">

        <mkdir dir="${abc.environment.javascript.grunt.application.directory}" />

        <abc:environment-npm-single-install package="${abc.environment.javascript.grunt.package}"
                                            version="${abc.environment.javascript.grunt.version}"
                                            dir="${abc.environment.javascript.grunt.application.directory}" />
    </target>
</project>
